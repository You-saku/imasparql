PREFIX imas-shape: <https://sparql.crssnky.xyz/imasrdf/constraints/>
PREFIX schema: <http://schema.org/>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX imas: <https://sparql.crssnky.xyz/imasrdf/URIs/imas-schema.ttl#>
PREFIX foaf: <http://xmlns.com/foaf/0.1/>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX sh: <http://www.w3.org/ns/shacl#>

imas-shape:IdolShape a sh:NodeShape;
    sh:targetClass imas:Idol;
    sh:property [
        sh:name "アイドルの登場するコンテンツのタイトルの制約";
        sh:path imas:Title;
        sh:datatype rdf:langString;
        sh:minCount 0;
    ];
    sh:property [
        sh:name "アイドルの登場するブランドの制約";
        sh:path imas:Brand;
        sh:datatype rdf:langString;
        sh:minCount 1;
        sh:maxCount 1;
        sh:in (
            "1stVision"@en # 特殊
            "765AS"@en
            "DearlyStars"@en
            "CinderellaGirls"@en
            "MillionLive"@en
            "SideM"@en
            "ShinyColors"@en
            "Xenoglossia"@en
            "Gakuen"@en 
            "Other"@en  # 判断に迷う場合はここ
        );
    ];
    sh:property [
        sh:name "アイドルのプロフィール等に書かれている名前の制約";
        sh:description "絶対に一つだけ存在する(maxCount 1, minCount 1)、ロコはロコであって伴田路子ではない";
        sh:path rdfs:label;
        sh:datatype xsd:string;
        sh:minCount 1;
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "アイドルの本名の制約";
        sh:description "ジュリア、アスラン=BBⅡ世とか本名がわかってないアイドルが何人かいるため数の制限はなく、日本語と英語表記一つづつ存在する想定のため、uniqueLang=true";
        sh:path schema:name;
        sh:datatype rdf:langString;
        sh:uniqueLang true;
    ];
    sh:property [
        sh:name "本名の仮名の制約";
        sh:description "仮名は日本語なのでlang=ja";
        sh:path imas:nameKana;
        sh:datatype rdf:langString;
        sh:languageIn ("ja");
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "下の名前の制約";
        sh:description "日本語、英語表記一つづつ存在する想定のため、uniqueLang=true";
        sh:path schema:givenName;
        sh:datatype rdf:langString;
        sh:uniqueLang true;
    ];
    sh:property [
        sh:name "上の名前の制約";
        sh:description "日本語、英語表記一つづつ存在する想定のため、uniqueLang=true";
        sh:path schema:familyName;
        sh:datatype rdf:langString;
        sh:uniqueLang true;
    ];
    sh:property [
        sh:name "下の名前の仮名の制約";
        sh:description "仮名は日本語なのでlang=ja";
        sh:path imas:givenNameKana;
        sh:datatype rdf:langString;
        sh:languageIn ("ja");
    ];
    sh:property [
        sh:name "上の名前の仮名の制約";
        sh:description "仮名は日本語なのでlang=ja";
        sh:path imas:familyNameKana;
        sh:datatype rdf:langString;
        sh:languageIn ("ja");
    ];
    sh:property [
        sh:name "性別の制約";
        sh:description "femaleかmaleのみで、性別は必ず一つだけ存在する";
        sh:path schema:gender;
        sh:datatype xsd:string;
        sh:in ("female" "male");
        sh:minCount 1;
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "テーマカラーの制約";
        sh:description "最大一つだけ存在して、目的語の型はhexBinary";
        sh:path imas:Color;
        sh:datatype xsd:hexBinary;
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "体重の制約";
        sh:description "何人かのアイドルは体重が数値じゃない";
        sh:path schema:weight;
        sh:xone (
            [
                sh:datatype xsd:float;
                sh:minExclusive 0;
            ]
            [
                sh:datatype rdf:langString;
                sh:languageIn ("ja")
            ]
        );
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "身長の制約";
        sh:description "何人かのアイドルは身長が数値じゃない";
        sh:path schema:height;
        sh:xone (
            [
                sh:datatype xsd:float;
                sh:minExclusive 0;
            ]
            [
                sh:datatype rdf:langString;
                sh:languageIn ("ja")
            ]
        );
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "胸囲の制約";
        sh:description "何人かのアイドルは胸囲が数値じゃない";
        sh:path imas:Bust;
        sh:xone (
            [
                sh:datatype xsd:float;
                sh:minExclusive 0;
            ]
            [
                sh:datatype rdf:langString;
                sh:languageIn ("ja")
            ]
        );
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "腹囲の制約";
        sh:description "何人かのアイドルは腹囲が数値じゃない";
        sh:path imas:Waist;
        sh:xone (
            [
                sh:datatype xsd:float;
                sh:minExclusive 0;
            ]
            [
                sh:datatype rdf:langString;
                sh:languageIn ("ja")
            ]
        );
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "腰囲の制約";
        sh:description "何人かのアイドルは腰囲が数値じゃない";
        sh:path imas:Hip;
        sh:xone (
            [
                sh:datatype xsd:float;
                sh:minExclusive 0;
            ]
            [
                sh:datatype rdf:langString;
                sh:languageIn ("ja")
            ]
        );
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "特技の制約";
        sh:description "今の所英語で特技を書くアイドルはいないので日本語のみ受け入れ、アイドルによっては複数あるので数の制限はない";
        sh:path imas:Talent;
        sh:datatype rdf:langString;
        sh:languageIn ("ja");
    ];
    sh:property [
        sh:name "誕生日の制約";
        sh:path schema:birthDate;
        sh:datatype xsd:gMonthDay;
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "出身の制約";
        sh:path schema:birthPlace;
        sh:datatype rdf:langString;
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "年齢の制約";
        sh:description "何人かのアイドルは年齢が数値じゃない";
        sh:path foaf:age;
        sh:xone (
            [
                sh:datatype xsd:integer;
                sh:minInclusive 0;
            ]
            [
                sh:datatype rdf:langString;
                sh:languageIn ("ja")
            ]
        );
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "血液型の制約";
        sh:description "牙崎漣が血液型不明なので、仕方なく「不明」も許容";
        sh:path imas:BloodType;
        sh:datatype xsd:string;
        sh:in ("A" "B" "O" "AB" "不明");
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "利き手の制約";
        sh:description "両手利きもいるのでbothも許容";
        sh:path imas:Handedness;
        sh:datatype xsd:string;
        sh:in ("right" "left" "both");
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "星座の制約";
        sh:description "今の所変なことを書いてるのは双葉杏だけ、増えてきたらちょっと考える";
        sh:path imas:Constellation;
        sh:datatype rdf:langString;
        sh:in (
            "牡羊座"@ja
            "牡牛座"@ja
            "双子座"@ja
            "蟹座"@ja
            "獅子座"@ja
            "乙女座"@ja
            "天秤座"@ja
            "蠍座"@ja
            "射手座"@ja
            "山羊座"@ja
            "水瓶座"@ja
            "魚座"@ja
            # ここから例外パターン
            "花も恥じらう乙女座"@ja
        );
        sh:languageIn ("ja");
        sh:maxCount 1;
    ];
    sh:property [
        sh:name "趣味の制約";
        sh:description "アイドルによっては複数あるので数の制限はない";
        sh:path imas:Hobby;
        sh:datatype rdf:langString;
        sh:languageIn ("ja");
    ];
    sh:property [
        sh:name "所属ユニット及び所属プロダクションの制約";
        sh:description "目的語はimas:Unit, imas:Production";
        sh:path schema:memberOf;
        sh:or(
            [
                sh:class imas:Unit;
            ]
            [
                sh:class imas:Production;
            ]
        )
    ];
    sh:property [
        sh:name "衣装の制約";
        sh:description "目的語はimas:Clothes";
        sh:path schema:owns;
        sh:class imas:Clothes;
    ];
    sh:property [
        sh:name "属性(PopLinks)の制約";
        sh:description "目的語はimas:PopLinksAttribute";
        sh:path imas:PopLinksAttribute;
        sh:datatype rdf:langString;
        sh:in (
            "darkness"@en
            "dream"@en
            "fire"@en
            "flower"@en
            "heaven"@en
            "light"@en
            "love"@en
            "moon"@en
            "ocean"@en
            "rainbow"@en
            "sky"@en
            "snow"@en
            "star"@en
            "thunder"@en
            "wind"@en
            "闇"@ja
            "夢"@ja
            "炎"@ja
            "花"@ja
            "天"@ja
            "光"@ja
            "愛"@ja
            "月"@ja
            "海"@ja
            "虹"@ja
            "空"@ja
            "雪"@ja
            "星"@ja
            "雷"@ja
            "風"@ja
        );
        sh:languageIn ("en" "ja");
        sh:maxCount 4;
    ];
    sh:property [
        sh:name "学年の制約";
        sh:description "学年は最大一つ持つ(判明していないアイドルもいるため、最小は0)";
        sh:path imas:SchoolGrade;
        sh:datatype rdf:langString;
        sh:languageIn ("ja");
        sh:maxCount 1;
        sh:in (
            "小学1年生"@ja
            "小学2年生"@ja
            "小学3年生"@ja
            "小学4年生"@ja
            "小学5年生"@ja
            "小学6年生"@ja
            "中学1年生"@ja
            "中学2年生"@ja
            "中学3年生"@ja
            "高校1年生"@ja
            "高校2年生"@ja
            "高校3年生"@ja
            "大学1年生"@ja
            "大学2年生"@ja
            "大学3年生"@ja
            "大学4年生"@ja
            "短大1年生"@ja
            "短大2年生"@ja
            "専門学校1年生"@ja
            "専門学校2年生"@ja
            "専門学校3年生"@ja
            "高等部アイドル科1年1組"@ja
        );
    ];
    sh:property [
        sh:name "CVの制約";
        sh:path imas:cv;
        sh:or (
            [
                sh:datatype rdf:langString;
                sh:languageIn ("ja");
                sh:maxCount 1;
            ]
            [
                sh:nodeKind sh:IRI;
            ]
        );
    ];
    sh:property [
        sh:name "アイドル名鑑のURLの制約";
        sh:path imas:IdolListURL;
        sh:nodeKind sh:IRI;
        sh:maxCount 1;
    ];
    sh:closed false.
